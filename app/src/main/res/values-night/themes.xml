<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExperimentV2" parent="Theme.MaterialComponents">

        <!-- Surface (Background) color-->
        <item name="surface">@color/colorDarkSurface</item>
        <item name="cardBackground">@color/cardview_dark_background</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/SaggezzaGreen</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDarkSurface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.ExperimentV2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>